// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id         String    @id @default(uuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  name       String
  lastname   String
  cedula     String
  phone      String?
  location   String?
  shirts     Int?
  boots      Boolean?
  paid       Boolean?
  casco      Boolean?
  Descarga   Descarga? @relation(fields: [descargaId], references: [id])
  descargaId String?
}

model Descarga {
  id          String     @id @default(uuid())
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  employees   Employee[]
  day         String?
  Client      Client?    @relation(fields: [clientId], references: [id])
  clientId    String?
  SubClient   SubClient? @relation(fields: [subClientId], references: [id])
  subClientId String?
}

model Client {
  id         String      @id @default(uuid())
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  name       String?
  location   String?
  image      String?
  subClients SubClient[]
  descargas  Descarga[]
}

model SubClient {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  client    Client?    @relation(fields: [clientId], references: [id])
  clientId  String?
  descargas Descarga[]
}
